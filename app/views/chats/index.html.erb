<div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <table class="table table-hover">
    <thead>
      <h2>チャット一覧</h2>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <td>
          <% if chat.target_user(current_user).present? %>
            <%= link_to chat.target_user(current_user).name, chat_talks_path(chat)%>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
