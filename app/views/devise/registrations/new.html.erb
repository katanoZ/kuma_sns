<h2 class="page-header">アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%if devise_error_messages!.present? %>
    <div class="form-group alert alert-danger">
      <div id="error_explanation">
        <%= devise_error_messages! %>
      </div>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>( ※ 最小<%= @minimum_password_length %>文字必須 )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "アカウント登録", class: "btn btn-primary hidden-xs"%>
    <%= f.submit "アカウント登録", class: "btn btn-primary btn-block visible-xs"%>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
