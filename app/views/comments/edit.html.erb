<h2 class="page-header">コメントを編集する</h2>

<% if @comment.errors.any? %>
  <div class="form-group alert alert-danger">
    <div id="error_explanation">
      <h2><%= @comment.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= form_for([@topic, @comment]) do |f| %>
  <%= f.hidden_field :topic_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "コメントを入力", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "コメントする", class: "btn btn-primary margin-top5px hidden-xs" %>
    <%= f.submit "コメントする", class: "btn btn-primary margin-top5px btn-block visible-xs" %>
  </div>
<% end %>

<p class="h4 margin-top15px">
  <%= link_to 'トピックに戻る', topic_path(@topic) %>
</p>
